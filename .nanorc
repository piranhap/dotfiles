# Enable syntax highlighting (loads all available syntax files)
include "/usr/share/nano/*.nanorc"

# Show line numbers
set linenumbers

# smooth scrolling (scroll line-by-line instead of half-screen jumps)
set smooth

# Mouse support (click to move cursor)
set mouse

# Auto-indent new lines to match the previous line
set autoindent

# Convert tabs to spaces (consistent with your Vim config)
set tabstospaces
set tabsize 4